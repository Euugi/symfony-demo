{% extends 'login_base.html.twig' %}

{% block content %}
    <div class="container col-4">
        <h1>
            List of exercises
        </h1>

        <div class="list-group">
            {% for exercise in exercises %}
                <a href="{{ path('exercise_show', {id: exercise.id}) }}" class="list-group-item">{{ exercise.name }}</a>
            {% endfor %}
        </div>

        </br>
        <a href="{{ path('exercise_create') }}" class="btn btn-primary">New exercise</a>
    </div>
{% endblock %}